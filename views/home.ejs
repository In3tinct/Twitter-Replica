<div class="container-fluid" id="tweetfield" ng-controller="tweetsController">

<div class="outerDiv">
<textarea class="" rows="1" cols="50" ng-model="tweetpost" name="description" maxlength="140" placeholder="What's Happening?"
          onfocus="this.rows=5;" style="resize:none;" onblur="this.rows=1;" id="txta">
</textarea>
</div>


    <div class="" id="txt">

        <textarea style="margin-left: 47px;width: 500px;" rows="1" cols="50" ng-model="tweetpost" name="description" maxlength="140" placeholder="What's Happening?"
                  onfocus="this.rows=5;" style="resize:none;" onblur="this.rows=1;" id="txta">
</textarea>
        <div></div>
            <input type="button" style="margin-left: 44px;" value="Tweet" id="tweet" ng-click="insertTweet(null,null,false);" onclick=""/>



        <div ng-repeat="x in tweets">

            <div id="tweets_text" class="panel panel-default" style="margin-left: 290px;width: 500px;">


                <ul class="stream-items">
                    <span ng-if="isRetweetFunction(x.retweet_user);"><strong>You retweeted this</strong></span>
                    <li style="line-height: inherit;" ng-if="!isRetweetFunction(x.retweet_user);"><strong>{{x.whole_name}}</strong></li>
                    <li style="line-height: inherit;" ng-if="!isRetweetFunction(x.retweet_user);"><input type="button" class="submitLink" ng-click="userProfile(x.user_id,x.whole_name);" value="{{x.user_id}}"></li>
                    <li style="line-height: inherit;" ng-if="isRetweetFunction(x.retweet_user);"><input type="button"  class="submitLink" ng-click="userProfile(x.retweet_user,null);" value="{{x.retweet_user}}"></li>

                    <li style="line-height: inherit;">{{x.tweet_comments}}</li>
                    <input ng-if="!isRetweetFunction(x.retweet_user);" type="button" value="Retweet" id="tweet" ng-click="insertTweet(x.user_id,x.tweet_comments,true);"/>
                </ul>

            </div>
            </div>

    </div></div>
</body>
</html>